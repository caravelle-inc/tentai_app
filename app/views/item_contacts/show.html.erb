<%- model_class = ItemContact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @item_contact.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @item_contact.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:purpose) %></dt>
      <dd><pre class="prettyprint"><%= @item_contact.purpose %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comment) %></dt>
      <dd><pre class="prettyprint"><%= @item_contact.comment %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:arrive_at) %></dt>
      <dd><pre class="prettyprint"><%= @item_contact.arrive_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:item_id) %></dt>
      <dd><pre class="prettyprint"><%= @item_contact.item_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              item_contacts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_contact_path(@item_contact), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_contact_path(@item_contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>