<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @item.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @item.price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @item.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sub_address) %></dt>
      <dd><pre class="prettyprint"><%= @item.sub_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:security_deposit) %></dt>
      <dd><pre class="prettyprint"><%= @item.security_deposit %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:key_money) %></dt>
      <dd><pre class="prettyprint"><%= @item.key_money %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:station) %></dt>
      <dd><pre class="prettyprint"><%= @item.station %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:walk_to) %></dt>
      <dd><pre class="prettyprint"><%= @item.walk_to %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:floor_plans) %></dt>
      <dd><pre class="prettyprint"><%= @item.floor_plans %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:square_meter) %></dt>
      <dd><pre class="prettyprint"><%= @item.square_meter %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:item_age) %></dt>
      <dd><pre class="prettyprint"><%= @item.item_age %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:equipment) %></dt>
      <dd><pre class="prettyprint"><%= @item.equipment %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @item.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:admin_user_id) %></dt>
      <dd><pre class="prettyprint"><%= @item.admin_user_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:image) %></dt>
        <% @item.item_images.each do |image| %>
          <dd><pre class="prettyprint"><%= image_tag image.image_pass.thumb_min %></pre></dd>
        <% end %>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('戻る', :default => t("helpers.links.back")),
              items_path, :class => 'btn btn-default'  %>
  <%= link_to t('お問い合わせ'),
              new_item_contact_path(params), :class => 'btn btn-default'  %>
</div>