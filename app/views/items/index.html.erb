<%- model_class = Item -%>
<div class="page-header"></div>

<div class="col-md-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">検索</div>
    </div>
    <div class="panel-body">
      <%= search_form_for(@q, method: :get) do |f| %>
        <div class="kensaku">
          <div class="form-group">
            <%= f.label :address_eq, 'エリア' %>
            <%= f.select :address_eq, Item.all.map { |o| [o.address, o.address] }, {}, {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.label :floor_plans_eq, '間取り' %>
            <%= f.select :floor_plans_eq, Item.all.map { |o| [o.floor_plans, o.floor_plans] }, {}, {class: "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.label :price, '家賃' %>
            <%= f.text_field :price_gt, class: "form-control" %>
            〜
            <%= f.text_field :price_lt, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit '検索', class: "btn btn-primary" %>
            <%= link_to 'クリア', items_path, class: "btn btn-default" %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<div class="col-md-9">
  <div class="item-count"><a class="font-large"><%= @item_counts %></a>件 該当しました</div>
  <div class="sort">新着順|価格順</div>
  <table class="table table-hover">
    <thead>
    <tr>
      <th><%= I18n.t("adminuser.item_name") %></th>
      <th><%= I18n.t("adminuser.top_image") %></th>
      <th><%= I18n.t("adminuser.price") %></th>
      <th><%= I18n.t("adminuser.address") %></th>
      <th><%= I18n.t("adminuser.station") %></th>
      <th><%= I18n.t("adminuser.walk_to") %></th>
      <th><%= I18n.t("adminuser.floor_plans") %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <%#= link_to(item) do %>
      <tr>
        <td><%= link_to item.name, item_path(item.id) %></td>
        <td><%= link_to image_tag(item.image.thumb), item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.address %></td>
        <td><%= item.station %></td>
        <td><%= item.walk_to %></td>
        <td><%= item.floor_plans %></td>
        <td><%= link_to t('詳細'),
            item_path(item.id), :class => 'btn btn-primary'  %></td>
      </tr>
      <%# end %>
    <% end %>
    </tbody>
  </table>

  <%= paginate @items %>
</div>